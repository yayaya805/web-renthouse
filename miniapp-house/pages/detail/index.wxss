/* pages/map/index.wxss */

page {
  font-family: Arial, Helvetica, sans-serif;
  /* font-family: 微软雅黑; */
}

.backCls {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.swiper {
  height: 400rpx;
  /* width: 100%; */
}

.swiper image {
  height: 100%;
  width: 100%;
}

.toolbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border: 1px solid #d9d9d9;
  background-color: #fafafa;
  flex-direction: row;
  display: flex;
  text-align: center;
  font-size: 38rpx;
}

.toolbar .goto-back {
  width: 50%;
  padding: 10px 0;
}

.toolbar .wechat {
  width: 25%;
  /* background-color: #09bb07; */
  /* background-color: #FFFFFF; */
  /* color: #fff; */
  /* border-left: 1px solid #d9d9d9; */
  /* border-right: 1px solid #d9d9d9; */
  line-height:100rpx;

}

.toolbar .star-cls{
  margin-left:38%;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  height: 48rpx;
  width: 48rpx;
}

.toolbar .star-txt{
  font-size: 24rpx;
}

.toolbar .phone {
  width: 25%;
  background-color: #00b2ec;
  color: #fff;
  line-height:100rpx;

}

/* 房屋主要信息展示 */

.house-main {
  padding: 36rpx 36rpx 55rpx 36rpx;
  background-color: #fff;
  border-bottom: 10rpx solid #ccc;
}

.house-main .house-summary {
  font-size: 32rpx;
  font-weight: 900;
  padding-right: 20rpx;
  margin-bottom: 12rpx;
}

.house-main .house-date {
  font-size: 26rpx;
  float: left;
}

.house-main .house-pv {
  font-size: 26rpx;
  float: right;
}

/* 户型和租金展示 */

.v-width {
  width: 49%;
}

.h-data {
  border-bottom: 1px solid #ccc;
  text-align: center;
  padding-top: 36rpx;
  height: 110rpx;
  background-color: #fff;
}

.h-data .h-hx {
  font-size: 26rpx;
  color: #ccc;
  float: left;
}

.h-data .h-zj {
  font-size: 26rpx;
  color: #ccc;
  float: right;
}

.h-data .h-ht {
  font-size: 32rpx;
  font-weight: 800;
  float: left;
}

.h-data .h-rental {
  font-size: 32rpx;
  font-weight: 800;
  float: right;
}

/* 房屋参数展示 */

.house-detail {
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  font-weight: 400;
  background-color: #fff;
}

.house-detail view {
  line-height: 44rpx;
  text-indent: 24rpx;
  
}

.house-detail .hd {
  float: left;
}

.h-desc{
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 20rpx 20rpx 20rpx;
}


.detail-txt{
  padding: 28rpx;
}